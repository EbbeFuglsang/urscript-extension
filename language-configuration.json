{
    // 註解
    "comments": {
        "lineComment": "#"  // 單行註解
    },
    // 括弧的符號
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    // 自動填寫結束符號的括弧
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // 點擊或 (ctrl + shift + ←/→) 要自動選取的文字範圍
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // 可折疊的程式碼區塊
    "folding": {
        "markers": {
            "start": "\\b(def|thread|while|for|if|elif|else)\\b",
            "end": "\\b(end)\\b"
        }
    },
    // 自動添加 tab 縮排的規則
    "indentationRules": {
        "increaseIndentPattern": "\\b(def|thread|while|for|if|elif|else).*:",
        "decreaseIndentPattern": "\\b(end)\\b"
    }
}